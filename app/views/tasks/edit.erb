
<h1 class="white-font center">Edit Task</h1>

<form class="task-form" action="/tasks/<%= @task.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">


  <input type="text" name="title" value="<%= @task.title %>"/>

  <label for="priority">Priority: </label>
  <select name="priority">
    <option value="None" <%= "selected" if !@task.priority %>>None</option>
    <option value="High" <%= "selected" if @task.priority == "High" %>>High</option>
    <option value="Medium" <%= "selected" if @task.priority == "Medium" %>>Medium</option>
    <option value="Low" <%= "selected" if @task.priority == "Low" %>>Low</option>
  </select>

  <br>
  <textarea name="description" rows="8" cols="80"><%= @task.description %></textarea><br>


  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <label for="due_date">Due Date:</label>
        <input type="date" name="due_date" id="due_date" value="<%= @task.due_time ? @task.due_time.to_date : nil %>" />
      </div>

      <div class="col-md-6">
        <label for="due_time">Due Time:</label>
        <input type="time" name="due_time" id="due_time" value="<%= @task.due_time ? @task.due_time.to_time.strftime("%H:%M") : nil %>" />
      </div>
    </div>

  </div>


  <input class="submit-btn" type="submit" name="submit" value="Edit Task">

</form>

<script>
  setTimeout(function(){
    document.getElementsByClassName("tox-notification__dismiss tox-button tox-button--naked tox-button--icon")[0].click();
  }, 500);
</script>
