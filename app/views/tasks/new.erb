
<u><h1 class="center">New Task</h1></u>

<form class="task-form" action="/tasks" method="post">
  <input type="text" name="title" placeholder="Task Title"/><br>

  <textarea name="description" rows="8" cols="80" placeholder="Description"></textarea><br>

  <div class="center">
    Due Date:
    <input type="date" name="due_date" style="width: 20%;" />

    Due Time:
    <input type="time" name="due_time" style="width: 20%;" />

  </div>

  <input class="submit-btn" type="submit" name="submit" value="Create Task">

</form>
