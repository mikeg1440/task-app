
<h1>Tasks</h1>

<hr><br>

<div class="right" style="float: right;">
  <a href="/tasks/new">New Task</a>
</div>

<% if @tasks %>

  <% @tasks.each do |task| %>
    <input type="checkbox" name="<%= task.id %>" value="<%= task.id %>" <%= "checked" if task.complete %>>  <%= task.title %><br><br>
  <% end %>

<% else %>

  <h2>No Tasks to List!</h2>

<% end %>
