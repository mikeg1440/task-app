<%# This is where we show the user settings %>


<% if is_logged_in? %>
  <script type="text/javascript" src="../javascripts/update.js"></script>

  <% if flash[:messages] %>

    <% if flash[:messages].class != Array %>
      <h4 class="center"><%= flash[:messages] %></h4>
    <% elsif flash[:messages].class == Array %>
      <% flash[:messages].each do |message| %>
        <h4 class="center"><%= message %></h4>
      <% end %>
    <% end %>

  <% end %>

  <div style="float: right;">
    <a class="EditButton" href="/users/<%= @user.id %>/edit">Edit User</a>
  </div>

  <br>

  <div class="wrapper center">
    <h1>Current User: <span class="purple-font"><%= @user.username %></span></h1>

    <h3>Registered Email: <span class="purple-font"><%= @user.email %></span></h3>

  </div>

  <form id="delete_account" action="/users/<%= @user.id %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
  </form>

  <div class="center">
    <input id="delete-account" class="DeleteButton" type="submit" value="Delete Account" onclick="ConfirmDelete()"/>
  </div>

<% else %>

  <h1>You must <a href="/login">Login</a> to view this page.</h1>

<% end %>
