  <body>

    <header>
      <% if is_logged_in? %>
        <div class="" style="float: right;">
          <!-- <a class="myButon right" href="/logout">Logout</a> -->
          <button type="button" name="logout" onclick="location.pathname = '/logout'" id="logoutButton">Logout</button>
        </div>

        <% unless url =~ /tasks$/ %>
          <div class="tasks-btn">
            <a class="blue-btn" href="/tasks">Tasks</a>
          </div>
        <% end %>

      <% end %>


    </header>

    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2019 <strong>TodoApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
